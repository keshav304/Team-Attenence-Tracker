PORT=5001
MONGODB_URI=mongodb://localhost:27017/dhsync
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
CLIENT_URL=http://localhost:5173

# LLM Provider switch: "openrouter" or "nvidia" (default: nvidia)
LLM_PROVIDER=nvidia

# OpenRouter API key (get one at https://openrouter.ai/keys)
OPENROUTER_API_KEY=your-openrouter-api-key

# NVIDIA NIM API key (get one at https://build.nvidia.com)
NVIDIA_API_KEY=your-nvidia-api-key

# VAPID keys for Web Push Notifications
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@dhsync.local

# Set to 0 if behind a corporate proxy with self-signed TLS certificates
# NODE_TLS_REJECT_UNAUTHORIZED=0
